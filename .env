# Local Development Environment
# Copy this to .env for local testing

# Grok AI API Configuration
# Get your API key from: https://console.x.ai/
NEXT_PUBLIC_GROK_API_KEY=xai-your-actual-key-here

# Local Hardhat Network Configuration
NEXT_PUBLIC_BASE_RPC_URL=http://localhost:8545
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=http://localhost:8545

# Local NFT Contract (deployed to Hardhat network)
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# Local Minter Private Key (Hardhat default account #0)
# This is the private key for the default Hardhat account
NFT_MINTER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Pinata IPFS Configuration (still needed for image storage)
# Get your API keys from: https://pinata.cloud
PINATA_API_KEY=your-pinata-api-key-here
PINATA_SECRET_KEY=your-pinata-secret-key-here

# WalletConnect Configuration (optional for local testing)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-project-id-here

# Base Network Configuration (not used in local mode)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your-actual-key-here
